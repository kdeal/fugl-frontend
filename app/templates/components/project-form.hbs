<div class='std-form'>
    {{yield}}
    {{#bs-form action=(action 'submit') model=model}}
        {{bs-form-element label="Title" property="title" controlType="text"}}
        {{bs-form-element label="Theme" property="theme" choiceLabelProperty="title"
        choiceValueProperty="id" choices=model.themes controlType="select"}}
        {{bs-form-element label="Description" property="description" controlType="textarea"}}
        {{bs-button defaultText=but_action type="primary" buttonType="submit"}}
        {{bs-button defaultText='Cancel' type="default" action="done"}}
    {{/bs-form}}
</div>
